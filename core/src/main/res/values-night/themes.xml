<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Waylan.DayNight" parent="Theme.Waylan.Dark"/>

    <style name="Theme.Waylan.Dark" parent="Theme.Waylan">
        <!--Color-->
        <item name="colorPrimary">@color/waylan_color_navy_10</item>
        <item name="colorOnPrimary">@color/waylan_color_ivory_95</item>
        <item name="colorPrimaryContainer">@color/waylan_color_navy_20</item>
        <item name="colorOnPrimaryContainer">@color/waylan_color_ivory_95</item>

        <item name="colorSecondary">@color/waylan_color_orange_60</item>
        <item name="colorOnSecondary">@color/waylan_color_orange_20</item>
        <item name="colorSecondaryContainer">@color/waylan_color_orange_20</item>
        <item name="colorOnSecondaryContainer">@color/waylan_color_orange_60</item>

        <item name="colorTertiary">@color/waylan_color_blue_95</item>
        <item name="colorOnTertiary">@color/waylan_color_blue_30</item>
        <item name="colorTertiaryContainer">@color/waylan_color_blue_99</item>
        <item name="colorOnTertiaryContainer">@color/waylan_color_blue_30</item>

        <item name="colorError">@color/waylan_color_mauve_80</item>
        <item name="colorOnError">@color/waylan_color_mauve_40</item>
        <item name="colorErrorContainer">@color/waylan_color_mauve_70</item>
        <item name="colorOnErrorContainer">@color/waylan_color_mauve_40</item>

        <item name="android:colorBackground">@color/waylan_color_navy_10</item>
        <item name="colorOnBackground">@color/waylan_color_ivory_95</item>

        <item name="colorSurface">@color/waylan_color_navy_10</item>
        <item name="colorOnSurface">@color/waylan_color_ivory_95</item>

        <item name="colorSurfaceInverse">@color/waylan_color_navy_40</item>
        <item name="colorOnSurfaceInverse">@color/waylan_color_navy_10</item>

        <item name="colorSurfaceVariant">@color/waylan_color_navy_40</item>
        <item name="colorOnSurfaceVariant">@color/waylan_color_ivory_70</item>

        <item name="colorOutline">@color/waylan_color_ivory_80</item>

        <!--Legacy color-->
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="colorInformative">@color/area</item>
        <item name="colorArea">?attr/colorPrimaryContainer</item>
        <item name="colorOnBackgroundError">?attr/colorError</item>
        <item name="colorOnInformative">?attr/colorOnPrimaryContainer</item>
        <item name="colorRipple">?attr/colorSurfaceVariant</item>
        <item name="colorScrim">@color/colorGray600</item>
        <item name="colorDivider">?attr/colorOnSurface</item>
        <item name="colorHairline">?attr/colorOutline</item>

        <item name="alphaEmphasisScrim">0.25</item>
        <item name="alphaEmphasisArea">0.10</item>

        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>