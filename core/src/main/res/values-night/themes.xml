        <!--Color-->
        <item name="colorPrimary">@color/colorIvory50</item>
        <item name="colorPrimaryVariant">@color/colorIvory50</item>
        <item name="colorSecondary">@color/colorOrange300</item>
        <item name="colorSecondaryVariant">@color/colorOrange300</item>

        <item name="android:colorBackground">@color/colorNavy800</item>
        <item name="colorSurface">@color/colorNavy800</item>
