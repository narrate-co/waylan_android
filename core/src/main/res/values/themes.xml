<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Waylan.DayNight" parent="Theme.Waylan"/>

    <style name="Theme.Waylan" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Color-->
        <item name="colorPrimary">@color/waylan_color_ivory_95</item>
        <item name="colorOnPrimary">@color/waylan_color_ivory_20</item>
        <item name="colorPrimaryContainer">@color/waylan_color_ivory_90</item>
        <item name="colorOnPrimaryContainer">@color/waylan_color_ivory_20</item>

        <item name="colorSecondary">@color/waylan_color_sage_40</item>
        <item name="colorOnSecondary">@color/waylan_color_sage_90</item>
        <item name="colorSecondaryContainer">@color/waylan_color_sage_90</item>
        <item name="colorOnSecondaryContainer">@color/waylan_color_sage_40</item>

        <item name="colorTertiary">@color/waylan_color_blue_95</item>
        <item name="colorOnTertiary">@color/waylan_color_blue_30</item>
        <item name="colorTertiaryContainer">@color/waylan_color_blue_99</item>
        <item name="colorOnTertiaryContainer">@color/waylan_color_blue_30</item>

        <item name="colorError">@color/waylan_color_red_70</item>
        <item name="colorOnError">@color/waylan_color_red_30</item>
        <item name="colorErrorContainer">@color/waylan_color_red_80</item>
        <item name="colorOnErrorContainer">@color/waylan_color_red_30</item>

        <item name="android:colorBackground">@color/waylan_color_ivory_95</item>
        <item name="colorOnBackground">@color/waylan_color_ivory_20</item>

        <item name="colorSurface">@color/waylan_color_ivory_95</item>
        <item name="colorOnSurface">@color/waylan_color_ivory_20</item>

        <item name="colorSurfaceInverse">@color/waylan_color_ivory_20</item>
        <item name="colorOnSurfaceInverse">@color/waylan_color_ivory_95</item>

        <item name="colorSurfaceVariant">@color/waylan_color_ivory_90</item>
        <item name="colorOnSurfaceVariant">@color/waylan_color_ivory_40</item>

        <item name="colorOutline">@color/waylan_color_ivory_80</item>

        <!--Legacy color-->
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="colorInformative">@color/area</item>
        <item name="colorArea">?attr/colorSurfaceVariant</item>
        <item name="colorOnBackgroundError">?attr/colorError</item>
        <item name="colorOnInformative">?attr/colorOnPrimaryContainer</item>
        <item name="colorRipple">?attr/colorSurfaceVariant</item>
        <item name="colorScrim">@color/colorGray600</item>
        <item name="colorDivider">?attr/colorOnSurface</item>
        <item name="colorHairline">?attr/colorOutline</item>

        <!--Alpha emphasis-->
        <item name="alphaEmphasisHighType">0.87</item>
        <item name="alphaEmphasisMedium">0.60</item>
        <item name="alphaEmphasisDisabled">0.38</item>
        <item name="alphaEmphasisArea">0.60</item>
        <item name="alphaEmphasisScrim">0.05</item>
        <item name="alphaEmphasisDivider">0.05</item>
        <item name="alphaEmphasisHairline">0.25</item>

        <!--Typography-->
        <item name="fontFamilyPrimary">@font/ibm_plex_serif_regular</item>
        <item name="fontFamilyPrimaryItalic">@font/ibm_plex_serif_italic</item>
        <item name="fontFamilyPrimaryMedium">@font/ibm_plex_serif_medium</item>
        <item name="fontFamilyPrimarySemiBold">@font/ibm_plex_serif_semibold</item>

        <item name="fontFamilySecondary">@font/ibm_plex_mono_regular</item>
        <item name="fontFamilySecondaryMedium">@font/ibm_plex_mono_medium</item>
        <item name="fontFamilySecondarySemiBold">@font/ibm_plex_mono_semi_bold</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.Waylan.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Waylan.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Waylan.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Waylan.Headline5</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Waylan.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Waylan.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Waylan.Body2</item>
        <item name="textAppearanceBody3">@style/TextAppearance.Waylan.Body3</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Waylan.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Waylan.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.Waylan.Button</item>

        <!--Shape-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Words.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Words.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Words.LargeComponent</item>

        <!--Styles-->
        <item name="cardViewStyle">@style/Widget.Waylan.Card</item>
        <item name="chipStyle">@style/Base.Widget.Waylan.Chip</item>
        <item name="progressUnderlineViewStyle">@style/Widget.Waylan.ProgressUnderlineView</item>
        <item name="reachabilityAppBarLayoutStyle">@style/Widget.Waylan.ReachabilityAppBarLayout.Flat</item>
        <item name="underlineActionViewStyle">@style/Widget.Waylan.UnderlineActionView</item>
        <item name="styleTextButton">@style/Widget.Waylan.Button.TextButton</item>
        <item name="styleChipOutlined">@style/Widget.Waylan.Chip.Outlined</item>
        <item name="styleChipOpen">@style/Widget.Waylan.Chip.Open</item>
        <item name="styleEditTextArea">@style/Widget.Waylan.EditText.Area</item>
        <item name="styleTextLabel">@style/Widget.Waylan.TextLabel</item>
        <item name="styleBottomSheetStandard">@style/Widget.Waylan.BottomSheet.Standard</item>

        <!--Android Framework-->
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="colorControlHighlight">?attr/colorRipple</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>
</resources>