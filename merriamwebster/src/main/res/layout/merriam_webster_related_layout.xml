<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/related_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginHorizontal="@dimen/keyline_3"
            android:textAppearance="?attr/textAppearanceOverline"
            android:text="Also see:" />

        <HorizontalScrollView
            android:id="@+id/related_hztl_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/keyline_3"
            android:clipToPadding="false"
            android:paddingEnd="@dimen/keyline_1"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/related_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:singleLine="true" />

        </HorizontalScrollView>

</LinearLayout>