<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Sheet background with top rounded corners-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="?colorAccentSurface"/>
            <corners android:topLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <!--A thin border stroke around the top edge of the sheet to aid edge visibility-->
    <item android:bottom="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:topLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <stroke
                android:width=".5dp"
                android:color="?attr/colorAccentSurfaceHairline" />
        </shape>
    </item>

</layer-list>
