<resources>


    <style name="Theme.Words.Dark" parent="Base.Theme.Words.Dark"/>

    <style name="Base.Theme.Words.Dark" parent="Base.Theme.Words.Light">
        <item name="colorPrimary">@color/colorBlack800</item>
        <item name="colorPrimaryDark">@color/colorBlack900</item>
        <item name="colorAccent">@color/colorTextLightMediumEmphasis</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/colorBlack800</item>



        <item name="android:textColorPrimary">@color/colorTextLightHighEmphasis</item>
        <item name="android:textColorSecondary">@color/colorTextLightMediumEmphasis</item>
        <item name="android:textColorTertiary">@color/colorTextLightLowEmphasis</item>

        <item name="android:textColorPrimaryInverse">@color/colorTextDarkHighEmphasis</item>
        <item name="android:textColorSecondaryInverse">@color/colorTextDarkMediumEmphasis</item>
        <item name="android:textColorTertiaryInverse">@color/colorTextDarkLowEmphasis</item>

        <item name="surfaceAColor">@color/colorBlack800</item>
        <item name="surfaceASubsurfaceAColor">@color/colorBlack700</item>
        <item name="surfaceBColor">@color/colorBlack600</item>
        <item name="surfaceBSubsurfaceAColor">@color/colorBlack500</item>

        <item name="colorAccentDark">@color/colorWhite900</item>
        <item name="colorPrimaryLight">@color/colorBlack700</item>
        <item name="colorHairline">@color/colorWhiteAlpha025</item>
        <item name="colorDivider">@color/colorWhiteAlpha005</item>
        <item name="colorScrim">@color/colorBlackAlpha025</item>
        <item name="colorError">@color/colorMauve300</item>
        <item name="colorInformative">@color/colorBlack300</item>
        <item name="colorBrand">@color/colorPink200</item>
        <item name="colorBrandSecondary">@color/colorBlue500</item>
        <item name="textColorError">@color/colorMauve300</item>
        <item name="textColorOnError">@color/colorTextDarkHighEmphasis</item>
        <item name="textColorHintOnError">@color/colorTextDarkLowEmphasis</item>
        <item name="textColorOnInformative">@color/colorTextLightHighEmphasis</item>


        <item name="textLabelBackgroundColor">@color/colorPink900</item>
        <item name="textLabelTextColor">@color/colorPink200</item>
    </style>

    <!--Light Theme-->
    <style name="Theme.Words.Light" parent="Base.Theme.Words.Light"/>

    <style name="Base.Theme.Words.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorIvory100</item>
        <item name="colorPrimaryDark">@color/colorIvory200</item>
        <item name="colorAccent">@color/colorTextDarkMediumEmphasis</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/colorIvory100</item>

        <item name="android:textColorPrimary">@color/colorTextDarkHighEmphasis</item>
        <item name="android:textColorSecondary">@color/colorTextDarkMediumEmphasis</item>
        <item name="android:textColorTertiary">@color/colorTextDarkLowEmphasis</item>

        <item name="android:textColorPrimaryInverse">@color/colorTextLightHighEmphasis</item>
        <item name="android:textColorSecondaryInverse">@color/colorTextLightMediumEmphasis</item>
        <item name="android:textColorTertiaryInverse">@color/colorTextLightLowEmphasis</item>

        <item name="surfaceAColor">@color/colorIvory100</item>
        <item name="surfaceASubsurfaceAColor">@color/colorIvory200</item>
        <item name="surfaceBColor">@color/colorIvory100</item>
        <item name="surfaceBSubsurfaceAColor">@color/colorIvory200</item>

        <item name="colorAccentDark">@color/colorBlack900</item>
        <item name="colorPrimaryLight">@color/colorIvory50</item>
        <item name="colorHairline">@color/colorBlackAlpha025</item>
        <item name="colorDivider">@color/colorBlackAlpha005</item>
        <item name="colorScrim">@color/colorBlackAlpha005</item>
        <item name="colorError">@color/colorMauve100</item>
        <item name="colorInformative">@color/colorIvory700</item>
        <item name="colorBrand">@color/colorPink400</item>
        <item name="colorBrandSecondary">@color/colorBlue800</item>
        <item name="textColorError">@color/colorMauve300</item>
        <item name="textColorOnError">@color/colorTextDarkHighEmphasis</item>
        <item name="textColorHintOnError">@color/colorTextDarkLowEmphasis</item>
        <item name="textColorOnInformative">@color/colorTextDarkHighEmphasis</item>

        <item name="textLabelBackgroundColor">@color/colorPink50</item>
        <item name="textLabelTextColor">@color/colorPink800</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.Words.Light.Headline2</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Words.Light.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Words.Light.Headline5</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Words.Light.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Words.Light.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Words.Light.Body1</item>
        <item name="textAppearanceBody1Inverse">@style/TextAppearance.Words.Light.Body1.Inverse</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Words.Light.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Words.Light.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Words.Light.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.Words.Light.Button</item>
        <item name="textAppearanceButtonInverse">@style/TextAppearance.Words.Light.Button.Inverse</item>

        <item name="styleTextButton">@style/Widget.Words.Light.TextView.Button</item>
        <item name="styleChipOutlined">@style/Widget.Words.Light.Chip.Outlined</item>
        <item name="styleChipOpen">@style/Widget.Words.Light.Chip.Open</item>
        <item name="styleEditTextArea">@style/Widget.Words.Light.EditText.Area</item>
        <item name="styleTextLabel">@style/Widget.Words.Light.TextLabel</item>

        <!--Implementation Specific Attrs-->
        <item name="drawableSnackbarErrorBackground">@drawable/snackbar_background_error</item>
        <item name="drawableSnackbarInformativeBackground">@drawable/snackbar_background_informative</item>
    </style>




    <!--Typescale-->
    <style name="TextAppearance.Words.Light.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">66sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TextAppearance.Words.Light.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TextAppearance.Words.Light.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.Words.Light.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Words.Light.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Words.Light.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Words.Light.Body1.Inverse" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Words.Light.Body2" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Words.Light.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Words.Light.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="Widget.Words.Light.TextView.Button" parent="Theme.Words.Light">
        <item name="android:textAppearance">@style/TextAppearance.Words.Light.Button</item>
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="TextAppearance.Words.Light.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.Words.Light.Button.Inverse" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <!--Chips-->
    <style name="Widget.Words.Light.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Words.Light.Body2</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="chipBackgroundColor">?android:windowBackground</item>
        <item name="chipStrokeColor">?colorHairline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.Words.Light.Chip.Open" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Words.Light.Body2</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="chipBackgroundColor">?surfaceBColor</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">2dp</item>
    </style>

    <!--Text Labels-->
    <style name="Widget.Words.Light.TextLabel" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Words.Light.Body2</item>
        <item name="android:textColor">?textLabelTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">?textLabelBackgroundColor</item>
        <item name="chipCornerRadius">10dp</item>
    </style>


    <!--Edit Text-->
    <style name="Widget.Words.Light.EditText.Area" parent="Theme.Words.Light">
        <item name="android:fontFamily">@font/source_code_pro</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?android:textColorTertiary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
