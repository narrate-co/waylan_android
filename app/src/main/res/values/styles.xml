<resources>

    <!--Typescale-->
    <style name="TextAppearance.Words.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="android:textSize">66sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TextAppearance.Words.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <style name="TextAppearance.Words.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.Words.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Words.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">?colorSecondaryOnDefault</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Words.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Words.Body2" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?colorTertiaryOnDefault</item>
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Words.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/source_code_pro</item>
        <item name="android:textColor">?colorTertiaryOnDefault</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Words.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?colorSecondaryOnDefault</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="Widget.Words.TextView.Button" parent="Theme.Words">
        <item name="android:textAppearance">@style/TextAppearance.Words.Button</item>
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="TextAppearance.Words.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <!--Components-->
    <!--Chips-->
    <style name="Widget.Words.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Words.Body2</item>
        <item name="android:textColor">?colorTertiaryOnDefault</item>
        <item name="chipBackgroundColor">?android:windowBackground</item>
        <item name="chipStrokeColor">?colorHairline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.Words.Chip.Open" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Words.Body2</item>
        <item name="android:textColor">?colorTertiaryOnDefault</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">2dp</item>
    </style>


    <!--Text Labels-->
    <style name="Widget.Words.TextLabel" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Words.Body2</item>
        <item name="android:textColor">?colorOnInformative</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">?colorInformative</item>
        <item name="chipCornerRadius">10dp</item>
    </style>


    <!--Edit Text-->
    <style name="Widget.Words.EditText.Area" parent="Theme.Words">
        <item name="android:fontFamily">@font/source_code_pro</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?colorTertiaryOnDefault</item>
        <item name="android:textColor">?colorPrimaryOnDefault</item>
    </style>


    <!--Default Res Values-->
    <style name="Widget.Words.ProgressUnderlineView" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="trackColor">?colorControlNormal</item>
        <item name="indicatorColor">?colorAccent</item>
    </style>

</resources>
