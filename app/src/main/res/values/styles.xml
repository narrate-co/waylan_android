<resources>

    <!--Buttons-->
    <style name="Widget.Words.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">@dimen/keyline_2</item>
        <item name="android:textColor">?colorOnBackgroundHighEmphasis</item>
        <item name="rippleColor">?colorRipple</item>
    </style>

    <!--Chips-->
    <style name="Widget.Words.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?colorOnBackgroundLowEmphasis</item>
        <item name="chipBackgroundColor">?android:colorBackground</item>
        <item name="rippleColor">?colorRipple</item>
        <item name="chipStrokeColor">?colorHairline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.Words.Chip.Open" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?colorOnBackgroundLowEmphasis</item>
        <item name="chipBackgroundColor">?colorSurface</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="rippleColor">?colorRipple</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">2dp</item>
    </style>

    <!--Text Labels-->
    <style name="Widget.Words.TextLabel" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Words.Body2</item>
        <item name="android:textColor">?colorOnInformative</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">?colorRipple</item>
        <item name="chipBackgroundColor">?colorInformative</item>
        <item name="chipCornerRadius">@dimen/text_label_corner_radius</item>
    </style>

    <!--Edit Texts-->
    <style name="Widget.Words.EditText.Area" parent="Theme.Words">
        <item name="android:fontFamily">@font/source_code_pro</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">?colorOnBackgroundLowEmphasis</item>
        <item name="android:textColor">?colorOnBackgroundHighEmphasis</item>
    </style>

    <!--Bottom Sheets-->
    <style name="Widget.Words.BottomSheet.Standard" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet.Standard</item>
    </style>

    <!--Alert Dialog-->
    <style name="ThemeOverlay.Words.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/shape_large_corner_radius</item>
        <item name="android:background">?colorSurface</item>
    </style>

    <!--Progress Underline-->
    <style name="Widget.Words.ProgressUnderlineView" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="trackColor">?colorControlNormal</item>
        <item name="indicatorColor">?colorAccent</item>
    </style>

</resources>
