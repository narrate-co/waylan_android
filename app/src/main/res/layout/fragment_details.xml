<?xml version="1.0" encoding="utf-8"?>
<space.narrate.words.android.util.widget.InsetFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrimFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="?colorScrim"
    android:fitsSystemWindows="true"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:backgroundTint="?android:windowBackground"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingBottom="200dp"
            android:clipToPadding="false"/>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="@android:color/transparent"
            app:layout_behavior="space.narrate.words.android.util.widget.ElasticAppBarBehavior"
            app:dragDismissDirection="down"
            >

            <FrameLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:minHeight="?actionBarSize"
                android:paddingLeft="@dimen/keyline_3"
                android:paddingRight="@dimen/keyline_3"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                >

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/navigationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    app:srcCompat="@drawable/ic_round_arrow_down_24px"
                    />

            </FrameLayout>

        </com.google.android.material.appbar.AppBarLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/statusBarScrim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:windowBackground"
        android:layout_gravity="top"/>

</space.narrate.words.android.util.widget.InsetFrameLayout>
