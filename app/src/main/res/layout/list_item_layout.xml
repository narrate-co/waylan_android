<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/keyline_3"
    android:paddingBottom="@dimen/keyline_3"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?textAppearanceHeadline4"
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/keyline_3"
            android:paddingTop="@dimen/keyline_2"
            android:paddingEnd="@dimen/keyline_3"
            android:paddingBottom="@dimen/keyline_1"
            tools:text="quiescent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?textAppearanceCaption"
            android:id="@+id/part_of_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/keyline_3"
            android:paddingEnd="@dimen/keyline_3"
            tools:text="noun"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?textAppearanceBody1"
            android:id="@+id/definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/keyline_3"
            android:paddingEnd="@dimen/keyline_3"
            android:paddingBottom="@dimen/keyline_1"
            tools:text=":marked by inactivity or repose :tranquilly at rest; causing no trouble or symptoms â€¢ quiescent gallstones" />

        <HorizontalScrollView
            android:id="@+id/hztl_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/keyline_2"
            android:paddingBottom="@dimen/keyline_3"
            android:paddingStart="12dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:singleLine="true" />


        </HorizontalScrollView>


</LinearLayout>