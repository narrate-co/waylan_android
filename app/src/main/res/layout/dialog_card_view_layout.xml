<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/keyline_2"
    android:layout_marginEnd="@dimen/keyline_2"
    android:layout_marginTop="@dimen/keyline_2"
    android:layout_marginBottom="24dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/light_colorTan25"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_3"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextBody1"
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Want to save your recent and favorite words? Create an account and keep building your vocabulary or log in to restore your history."
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextButton"
            android:id="@+id/topButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/keyline_3"
            android:text="Create Account"
            android:gravity="right"
            android:layout_gravity="right"
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextButton"
            android:id="@+id/bottomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/keyline_3"
            android:text="Log in"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_gravity="right"
            />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

            