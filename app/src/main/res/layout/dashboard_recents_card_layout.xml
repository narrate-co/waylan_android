<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recentsCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/keyline_3"
    android:layout_marginEnd="@dimen/keyline_3"
    android:layout_marginTop="@dimen/keyline_2"
    android:layout_marginBottom="@dimen/keyline_2"
    android:paddingTop="@dimen/keyline_3"
    android:paddingBottom="@dimen/keyline_3"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?android:windowBackground"
    app:strokeColor="?android:attr/textColorHint"
    app:strokeWidth="1dp"
    tools:showIn="@layout/dashboard_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keyline_2"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/keyline_2"
            android:paddingBottom="@dimen/keyline_2"
            android:src="@drawable/ic_access_time_black_24dp" />

        <LinearLayout
            android:id="@+id/recentsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/keyline_2"
                android:text="apathy"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="?android:attr/textColorPrimary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/keyline_1"
                android:paddingBottom="@dimen/keyline_2"
                android:text="the feeling of not having much emotion or interest" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentWord2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/keyline_2"
                android:text="epigram"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="?android:attr/textColorPrimary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recentDefinition2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/keyline_1"
                android:paddingBottom="@dimen/keyline_2"
                android:text="a short or clever poem or saying" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recentsMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginBottom="@dimen/keyline_1"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_gravity="end"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

    