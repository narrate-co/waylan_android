<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_3"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="?textAppearanceBody1"
            android:id="@+id/bannerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Favorites is where all of your saved words will appear."
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextButton"
            android:id="@+id/bannerTopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/keyline_3"
            android:paddingLeft="@dimen/keyline_3"
            android:text="Get Started"
            android:gravity="right"
            android:layout_gravity="right"
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextButton"
            android:id="@+id/bannerBottomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/keyline_3"
            android:paddingLeft="@dimen/keyline_3"
            android:text="Dismiss"
            android:gravity="right"
            android:layout_gravity="right"
            />


    </LinearLayout>

</merge>

