<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--clipChildren and clipToPadding are false to make sure -->
    <!--we allow fragments to draw shadows -->
    <com.wordsdict.android.util.widget.InsetFrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        />

    <View
        android:id="@+id/bottomSheetSkrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:background="?colorScrim"/>

    <fragment
        android:id="@+id/contextualFragment"
        android:name="com.wordsdict.android.ui.search.ContextualFragment"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="132dp"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.wordsdict.android.ui.search.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/search_min_peek_height"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
