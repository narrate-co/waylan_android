<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/keyline_2"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="?actionBarSize"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/keyline_3"
            android:layout_marginRight="@dimen/keyline_3"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            app:layout_scrollFlags="scroll|enterAlways"
            >

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/navigationIcon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="left|center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_marginBottom="7dp"
                app:srcCompat="@drawable/ic_round_arrow_back_24px"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                tools:text="Favorite"
                style="@style/Words.Widget.TextView.MenuTitle"/>

            <View
                android:layout_width="72dp"
                android:layout_height="2dp"
                android:background="@drawable/title_underline_background"
                android:layout_marginTop="@dimen/keyline_3"/>


        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
