<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize">

    <LinearLayout
        android:id="@+id/trendingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/keyline_2"
        android:paddingTop="12dp"
        android:paddingStart="@dimen/keyline_3"
        android:paddingEnd="@dimen/keyline_3"
        android:paddingBottom="12dp"
        android:background="?selectableItemBackground"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trending"
            style="@style/Words.Widget.TextView.MenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trending"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trendingPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pluralism, calm, compeer, equal"
            style="@style/Words.Widget.TextView.MenuSubtitle"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingStart="@dimen/keyline_3"
        android:paddingEnd="@dimen/keyline_3"
        android:paddingBottom="12dp"
        android:background="?selectableItemBackground"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recent"
            style="@style/Words.Widget.TextView.MenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recentPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pluralism, calm, compeer, equal"
            style="@style/Words.Widget.TextView.MenuSubtitle"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favoriteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingStart="@dimen/keyline_3"
        android:paddingEnd="@dimen/keyline_3"
        android:paddingBottom="12dp"
        android:background="?selectableItemBackground"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/favorite"
            style="@style/Words.Widget.TextView.MenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/favoritePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pluralism, calm, compeer, equal"
            style="@style/Words.Widget.TextView.MenuSubtitle"
            />

    </LinearLayout>

    <View
        android:layout_width="72dp"
        android:layout_height="2dp"
        android:background="@drawable/title_underline_background"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="@dimen/keyline_3"
        android:layout_marginBottom="32dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Words.Widget.TextView.MenuTitle"
        android:background="?selectableItemBackground"
        android:paddingLeft="@dimen/keyline_3"
        android:paddingRight="@dimen/keyline_3"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Settings"
        />

</LinearLayout>