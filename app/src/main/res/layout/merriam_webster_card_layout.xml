<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sourceCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/keyline_2"
    android:layout_marginEnd="@dimen/keyline_2"
    android:layout_marginTop="@dimen/keyline_2"
    android:layout_marginBottom="@dimen/keyline_2"
    android:paddingTop="@dimen/keyline_3"
    android:paddingBottom="@dimen/keyline_3"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/light_colorTan25"
    android:clipToPadding="false"
    >



    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_3"
            android:layout_marginEnd="@dimen/keyline_3"
            android:layout_marginStart="@dimen/keyline_3"
            >

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Merriam-Webster"
            />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/audioImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_round_play_arrow_24px"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginBottom="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_3"
            android:layout_marginEnd="@dimen/keyline_3"
            android:layout_gravity="right"
            >

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="true"
                android:indeterminateOnly="false"
                android:indeterminateTint="@color/light_colorPink400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                />

            <View
                android:id="@+id/underline"
                android:layout_width="72dp"
                android:layout_height="2dp"
                android:background="@drawable/title_underline_background"
                android:layout_gravity="center_vertical"
                />

        </FrameLayout>

    <LinearLayout
        android:id="@+id/definitionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/keyline_3"
        android:orientation="vertical"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="?attr/styleTextCaption"
            android:id="@+id/relatedWordsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Also see:"
            android:visibility="gone"
            />

            <HorizontalScrollView
                android:id="@+id/relatedWordsHorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_marginBottom="@dimen/keyline_3"
                android:clipToPadding="false"
                android:paddingEnd="@dimen/keyline_1"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/relatedWordsChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:singleLine="true" />

            </HorizontalScrollView>

    </LinearLayout>






</com.google.android.material.card.MaterialCardView>

    