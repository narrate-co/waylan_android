<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/keyline_3"
    android:paddingTop="@dimen/keyline_3"
    android:paddingEnd="@dimen/keyline_3"
    android:paddingBottom="@dimen/keyline_3">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/title_trending"
        android:textAppearance="?textAppearanceHeadline5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preview_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?textAppearanceBody2"
        tools:text="pluralism, calm, compeer, equal" />

</LinearLayout>
